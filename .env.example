PORT=3010
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/confuse_auth"
REDIS_URL="redis://localhost:6379"

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_ISSUER=https://your-tenant.auth0.com/
AUTH0_AUDIENCE=confuse-api
AUTH0_JWKS_URI=https://your-tenant.auth0.com/.well-known/jwks.json

# Auth0 Management API (Required for syncing connections)
# Create a generic M2M application in Auth0 and authorize it for Management API (read:users, read:user_idp_tokens)
AUTH0_CLIENT_ID=your-m2m-client-id
AUTH0_CLIENT_SECRET=your-m2m-client-secret
AUTH0_MANAGEMENT_DOMAIN=your-tenant.auth0.com

# JWT Configuration
JWT_ISSUER=conhub-auth
JWT_AUDIENCE=conhub-services
JWT_PRIVATE_KEY_PATH=./keys/private.key
JWT_PUBLIC_KEY_PATH=./keys/public.key

# Internal API Security
INTERNAL_API_KEY=dev-internal-key

# Service URLs
CORS_ORIGINS=http://localhost:3000
FEATURE_TOGGLE_SERVICE_URL=http://localhost:3099
FRONTEND_URL=http://localhost:3000
